---
const { url } = Astro.request;
const reqUrl = new URL(url, Astro.site || "http://localhost");
const currentLang = reqUrl.pathname.startsWith("/es") ? "es" : "en";
---

<header>
  <div class="flex min-h-screen shadow-lg animate-fade-in-up ">
    <div class="flex-1 bg-stone-600">
      <div
        class="flex flex-col justify-center items-end h-full mr-1 select-none"
      >
        <h1 class="text-5xl font-bold text-white">Estiven</h1>
        <p
          class="im text-white uppercase text-sm tracking-tight md:tracking-widest text-end font-extralight"
        >
        {currentLang === "en" ? "Full Stack Developer" : "Dessarrollador Full Stack"}
        </p>
      </div>
    </div>
    <div class="w-[40%] bg-gradient-to-r from-gray-100 to-white">
      <div class="flex flex-col justify-center items-start h-full gap-3 ml-1">
        <h1 class="flex text-5xl font-extralight mt-7 select-none">Mejia</h1>
        <nav class="flex justify-center items-center">
          <ul class="flex gap-1">
            <li>
              <a aria-label="GitHub Profile" href="https://github.com/Estivenm06" target="_blank">
                <span class="sr-only">Visit Estiven Mejia's GitHub Profile</span>
                <svg
                  aria-label="GitHub Profile"
                  class="w-8 h-8 fill-[#24292e] hover:fill-[#5b5b5b] hover:scale-105 transition-all duration-200"
                >
                  <use xlink:href="/sprite.svg#githubIcon"></use>
                </svg>
              </a>
            </li>
            <li>
              <a aria-label="LinkedIn Profile" href="https://linkedin.com/in/estiven-mejia" target="_blank">
                <span class="sr-only">Visit Estiven Mejia's LinkedIn Profile</span>
                <svg
                  aria-label="LinkedIn Profile"
                  class="w-8 h-8 fill-[#0e76a8] hover:fill-[#185a7a] hover:scale-105 transition-all duration-200"
                >
                  <use xlink:href="/sprite.svg#linkedinIcon"></use>
                </svg>
              </a>
            </li>
            <li>
              <a aria-label="Email" href="mailto:estivenamg01@gmail.com">
                <span class="sr-only">Send an email to Estiven Mejia</span>
                <svg
                  aria-label="Email"
                  class="w-8 h-8 hover:scale-105 transition-all duration-200"
                >
                  <use xlink:href="/sprite.svg#emailIcon"></use>
                </svg>
              </a>
<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
